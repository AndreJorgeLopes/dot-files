# Better word deletion
bindkey '^H' backward-kill-word           # Ctrl+W delete previous word

# Forward word deletion
bindkey '^K' kill-line                    # Ctrl+K kill to end of line
bindkey '^[^?' backward-kill-line           # Ctrl+U kill from cursor to start

# Word-wise cursor movement
bindkey '^[f' forward-word                 # Alt+F move forward one word
bindkey '^[b' backward-word                # Alt+B move back one word

# Search command history
bindkey '^R' history-incremental-search-backward

# Clear screen
bindkey '^L' clear-screen

# Delete one character forward (like DEL)
bindkey '^D' delete-char

# Re-run last command with sudo
bindkey -s '^[s' '^Usudo !!\n^M'

bindkey -e
bindkey -s '\eh' '^Uread cht_search && cht.sh $cht_search | cat^M' # [alt/esc + H] cheat sheet documentation search with fzf
bindkey -s '\ea' '^Ufzf_alias^M' # [alt/esc + a] Search aliases with fzf
bindkey -s '^a' '^Ufzf_alias^M' # [ctrl + a] Search aliases with fzf
bindkey '^o' insert-last-command-output # [ctrl + o] Paste the ouput of the last command
bindkey '^H' backward-kill-word # [ctrl + delete] delete next word after cursor
